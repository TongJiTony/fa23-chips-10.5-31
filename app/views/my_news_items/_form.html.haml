= form_with url: form_url, html: { method: form_method } do |f|
  - if news_item.errors.any?
    .alert.alert-danger
      %h2
        "#{pluralize(news_item.errors.count, 'error')} prohibited this news from being saved:"
      %ul
        - news_item.errors.full_messages.each do |message|
          %li= message
  .form-group.row
    .col-sm-3
      = f.label :representative, class: 'col-form-label'
    .col-sm-9
      = f.select :rep_id, representatives_list, { include_blank: true }, class: 'form-control'
  .form-group.row
    .col-sm-3
      = f.label :issue, class: 'col-form-label'
    .col-sm-9
      = f.select :issue, issue_list, { include_blank: true }, class: 'form-control'
  .actions
    = f.submit 'Search', class: 'btn btn-primary'
